<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext 
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="nvarchar.type" value="character varying" dbms="postgresql" />
    <property name="nvarchar.type" value="nvarchar" dbms="mssql" />

    <changeSet id="create table watch_student" author="tony.arland">
        <createTable tableName="watch_student">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="student_id" type="uuid" >
                <constraints nullable="false"
                    foreignKeyName="watch_tar_person_id"
                    references="person(id)" />            
            </column>   
            <column name="watcher_id" type="uuid" >
                <constraints nullable="false"
                    foreignKeyName="watch_sor_person_id"
                    references="person(id)" />            
            </column>  
            <column name="watch_date" type="datetime" >
                <constraints nullable="false" />
            </column>
            <column name="created_date" type="datetime">
                <constraints nullable="false" />
            </column>
            <column name="modified_date" type="datetime" />
            <column name="created_by" type="uuid">
                <constraints nullable="false"
                    foreignKeyName="sch_app_task_created_person_id"
                    references="person(id)" />
            </column>
            <column name="modified_by" type="uuid">
                <constraints nullable="true"
                    foreignKeyName="sch_app_task_modified_person_id"
                    references="person(id)" />
            </column>
            <column name="object_status" type="int">
                <constraints nullable="false" />
            </column>
        </createTable>  
        <sql>grant all on watch_student to ${database.app.username}</sql>
   </changeSet>
   <changeSet id="indicies and constraints for watch_student" author="tony.arland">
   	<addUniqueConstraint tableName="watch_student" columnNames="watcher_id,student_id"/>
   	<createIndex tableName="watch_student" indexName="watch_student_watcher_id">
   		<column name="watcher_id"></column>
   	</createIndex>
   	<createIndex tableName="watch_student" indexName="watch_student_student_id">
   		<column name="student_id"></column>
   	</createIndex>
   </changeSet>
</databaseChangeLog>