<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="nvarchar.type" value="character varying" dbms="postgresql" />
    <property name="nvarchar.type" value="nvarchar" dbms="mssql" />

    <changeSet author="dan.mccallum" id="change default bulk job queue schedule" >
        <update tableName="config">
            <column name="value">5000/30000</column>
            <column name="default_value">5000/30000</column>
            <column name="description"
                    value="Bulk Job Queue Config:  Drives the frequency of the cron job that executes bulk actions. Default is 'Every 5s, with a 30s initial delay''" />
            <where>id = '6eb58750-c598-47bf-a4f5-616fc7024501'</where>
        </update>
    </changeSet>

</databaseChangeLog>