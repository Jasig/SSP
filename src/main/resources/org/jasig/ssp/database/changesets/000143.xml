<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext 
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="schema" value="${database.schema}" />
    <property name="nvarchar.type" value="character varying" dbms="postgresql" />
    <property name="nvarchar.type" value="nvarchar" dbms="mssql" />
    
    <changeSet dbms="postgresql" id="add trigger program status spc.serv.grp postgres"  author="jim.stanley">
        <sql splitStatements="false"><![CDATA[
        CREATE TRIGGER change_directory_person_program_status
             AFTER INSERT ON ${schema}.person_program_status
             FOR EACH ROW
             WHEN(${schema}.DIRECTORY_PERSON_REFRESH_RUNNING() = 0)
        EXECUTE PROCEDURE ${schema}.update_directory_person_from_view_where_person_id();
        ]]></sql>
    </changeSet>
    
    <changeSet dbms="mssql" id="add trigger program status msql" author="jim.stanley">
        <sql splitStatements="false"><![CDATA[
               CREATE TRIGGER ${schema}.tr_insert_directory_person_program_status on ${schema}.person_program_status AFTER UPDATE AS
                    IF @@ROWCOUNT > 0 AND ${schema}.DIRECTORY_PERSON_REFRESH_RUNNING() = 0
                        declare @person_id uniqueidentifier
                        set @person_id = (SELECT person_id FROM inserted where object_status=1);
                        EXEC ${schema}.update_directory_person_from_view_where_person_id @person_id ]]></sql>
    </changeSet>
</databaseChangeLog>
